<div class='container'>
  <div class='button-box'>
    <%= link_to "Add Food", new_food_path, class: "add-food-button" %>
  </div>

  <table class="food-table">
    <thead>
      <tr>
        <th>Food Name</th>
        <th>Quantity</th>
        <th>Measurement Unit</th>
        <th>Unit Price</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @foods.each_with_index do |food, index| %>
        <tr class="<%= index.even? ? 'light-row' : 'dark-row' %>">
          <td><%= food.name %></td>
          <td><%= food.quantity %></td>
          <td><%= food.measurement_unit %></td>
          <td>$ <%= food.price %></td>
          <td>
            <% if current_user == food.user %>
              <%= button_to "Delete", food_path(food), method: :delete, data: { confirm: "Are you sure you want to delete this food?" }, class: 'delete-button'%>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
