<!DOCTYPE html>
<html>
  <head>
    <title>RecipeApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag 'foods', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'public_recipes', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'recipes', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'shopping_lists', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'navigation', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
  <nav>
    <ul>
      <li><%= link_to "Recipes", recipes_path %></li>
      <li><%= link_to "Foods", foods_path %></li>
      <li><%= link_to "Public Recipes", public_recipes_path %></li>
      <li><%= link_to "Shopping Lists", shopping_lists_path %></li>
      <% if user_signed_in? %>
        <li class="sign-out"><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
      <% else %>
        <li><%= link_to "Sign In", new_user_session_path %></li>
        <li><%= link_to "Sign Up", new_user_registration_path %></li>
      <% end %>
    </ul>
  </nav>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
